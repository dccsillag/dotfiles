"for SRC in $(pacmd list-sources | grep index | sed 's/^[ *]\+index: \([0-9]\+\)/\1/g'); do pacmd set-source-mute $SRC 0; done"
  c:86

"for SRC in $(pacmd list-sources | grep index | sed 's/^[ *]\+index: \([0-9]\+\)/\1/g'); do pacmd set-source-mute $SRC 1; done"
  release+c:86

"for SRC in $(pacmd list-sources | grep index | sed 's/^[ *]\+index: \([0-9]\+\)/\1/g'); do pacmd set-source-mute $SRC 0; done"
  shift+c:86
