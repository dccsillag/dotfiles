# vim: ft=sh

check() {
    command_exists yue
}

install_pip() {
    pip install hererocks

    cd ~/static
    rm -rf luajit
    hererocks luajit -jlatest -rlatest

    echo 'source ~/static/luajit/bin/activate' >> ~/.zshrc_local
    source ~/static/luajit/bin/activate

    luarocks install yuescript
}
