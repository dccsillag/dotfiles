# vim: ft=sh

install_ubuntu() {
    "$SUDO" apt install ctags
}

install_manjaro() {
    yay -S ctags
}

install_manual() {
    command_exists ctags && return 0

    git clone https://github.com/universal-ctags/ctags.git
    cd ctags
    ./autogen.sh
    ./configure --prefix="$HOME/.local"
    make
    make install
}
