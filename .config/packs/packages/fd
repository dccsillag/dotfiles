# vim: ft=sh

install_ubuntu() {
    "$SUDO" apt install fd-find
}

install_manjaro() {
    yay -S fd
}

install_nix() {
    nix-env -i fd
}

install_manual() {
    curl -Lo fd.tar.gz https://github.com/sharkdp/fd/releases/download/v8.2.1/fd-v8.2.1-x86_64-unknown-linux-gnu.tar.gz
    tar -xzf fd.tar.gz
    cp fd-*-x86_64-unknown-linux-gnu/fd ~/.local/bin/fd
}
